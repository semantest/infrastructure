# Semantest Infrastructure Environment Configuration

# Pulumi Configuration
PULUMI_ACCESS_TOKEN=your-pulumi-access-token
PULUMI_CONFIG_PASSPHRASE=your-secure-passphrase

# AWS Configuration (for AWS deployments)
AWS_REGION=us-east-1
AWS_PROFILE=semantest-dev

# Azure Configuration (for Azure deployments)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_LOCATION=eastus

# Application Configuration
SEMANTEST_ENVIRONMENT=dev
SEMANTEST_LOG_LEVEL=INFO

# Function Configuration
FUNCTION_MEMORY_MB=512
FUNCTION_TIMEOUT_SECONDS=30

# API Configuration
API_CORS_ORIGINS=https://semantest.com,http://localhost:3000
API_RATE_LIMIT=100

# WebSocket Configuration
WEBSOCKET_IDLE_TIMEOUT_SECONDS=300
WEBSOCKET_MAX_CONNECTIONS=1000

# Monitoring
ENABLE_TRACING=true
ENABLE_METRICS=true

# Feature Flags
ENABLE_CANARY_DEPLOYMENT=false
ENABLE_AUTO_SCALING=true